@model List<digitalpayment3.Models.TransactionViewModel>

@{
    ViewBag.PageTitle = "İşlem Özeti";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold">
            <i class="bi bi-graph-up"></i> İşlem Özeti
        </h2>
        <p class="text-muted">Tüm hesaplarınıza ait son işlemler</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-success text-white">
            <div class="card-body text-center">
                <i class="bi bi-arrow-down-circle" style="font-size: 2.5rem;"></i>
                <h3 class="mt-2">@Model.Count(t => t.Type == "Deposit")</h3>
                <p class="mb-0">Toplam Yatırma</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-danger text-white">
            <div class="card-body text-center">
                <i class="bi bi-arrow-up-circle" style="font-size: 2.5rem;"></i>
                <h3 class="mt-2">@Model.Count(t => t.Type == "Withdraw")</h3>
                <p class="mb-0">Toplam Çekme</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-primary text-white">
            <div class="card-body text-center">
                <i class="bi bi-list-check" style="font-size: 2.5rem;"></i>
                <h3 class="mt-2">@Model.Count</h3>
                <p class="mb-0">Toplam İşlem</p>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Son İşlemler</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Hesap ID</th>
                            <th>Tarih</th>
                            <th>İşlem Tipi</th>
                            <th>Tutar</th>
                            <th>Durum</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td><strong>#@transaction.AccountId</strong></td>
                                <td>@transaction.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (transaction.Type == "Deposit")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-arrow-down-circle"></i> Para Yatırma
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-arrow-up-circle"></i> Para Çekme
                                        </span>
                                    }
                                </td>
                                <td>
                                    <strong class="@(transaction.Type == "Deposit" ? "text-success" : "text-danger")">
                                        @(transaction.Type == "Deposit" ? "+" : "-")@transaction.Amount.ToString("C")
                                    </strong>
                                </td>
                                <td>
                                    <span class="badge bg-success">@transaction.Status</span>
                                </td>
                                <td>@transaction.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Henüz işlem bulunmuyor.
    </div>
}
