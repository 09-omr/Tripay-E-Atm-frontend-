@model List<digitalpayment3.Models.TransactionViewModel>

@{
    ViewBag.PageTitle = "İşlem Geçmişi";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold">
            <i class="bi bi-clock-history"></i> İşlem Geçmişi
        </h2>
        <p class="text-muted">Hesap ID: #@ViewBag.AccountId</p>
    </div>
    <div class="col text-end">
        <a asp-action="Index" asp-controller="Account" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Hesaplara Dön
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>İşlem Tipi</th>
                            <th>Tutar</th>
                            <th>Durum</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td>@transaction.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (transaction.Type == "Deposit")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-arrow-down-circle"></i> Para Yatırma
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-arrow-up-circle"></i> Para Çekme
                                        </span>
                                    }
                                </td>
                                <td>
                                    <strong class="@(transaction.Type == "Deposit" ? "text-success" : "text-danger")">
                                        @(transaction.Type == "Deposit" ? "+" : "-")@transaction.Amount.ToString("C")
                                    </strong>
                                </td>
                                <td>
                                    @if (transaction.Status == "Success")
                                    {
                                        <span class="badge bg-success">Başarılı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@transaction.Status</span>
                                    }
                                </td>
                                <td>@transaction.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Bu hesaba ait henüz işlem bulunmuyor.
    </div>
}
