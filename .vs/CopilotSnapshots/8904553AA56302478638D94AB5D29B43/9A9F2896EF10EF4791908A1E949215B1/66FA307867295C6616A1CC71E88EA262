    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var account in Model)
        {
            <div class="col-md-6 col-lg-4">
                @await Html.PartialAsync("_AccountSummary", account)
            </div>
        }
    </div>

    <div class="row mt-5">
        <div class="col-lg-8">
            <h4 class="mb-3"><i class="bi bi-clock-history"></i> Son İşlemler</h4>
