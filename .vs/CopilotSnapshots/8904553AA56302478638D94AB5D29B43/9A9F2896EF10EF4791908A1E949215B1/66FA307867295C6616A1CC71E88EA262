                        <dt class="col-sm-7">Aktif Hesap:</dt>
                        <dd class="col-sm-5 text-end"><strong>@Model.Count(a => a.IsActive)</strong></dd>
                        
                        <dt class="col-sm-7">Toplam Bakiye:</dt>
                        <dd class="col-sm-5 text-end"><strong>@Model.Sum(a => a.Balance).ToString("C")</strong></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
}
else
{
