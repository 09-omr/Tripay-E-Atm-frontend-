@{
    ViewBag.PageTitle = "Kayýt Ol";
}

<div class="row">
    <div class="col-lg-5 col-md-7 mx-auto">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="bi bi-person-plus text-primary" style="font-size: 4rem;"></i>
            </div>
            <h1 class="display-6 fw-bold">Kayýt Ol</h1>
            <p class="text-muted">Yeni hesap oluþtur</p>
        </div>

        <div class="card shadow border-0">
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label">Ad Soyad</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input name="fullName" class="form-control" placeholder="Ad Soyad" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-posta Adresi</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input name="email" type="email" class="form-control" placeholder="ornek@email.com" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Þifre</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input name="password" type="password" class="form-control" placeholder="••••••••" required />
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus"></i> Kayýt Ol
                        </button>
                        <a asp-action="Login" class="btn btn-outline-secondary">
                            Zaten hesabýnýz var mý? Giriþ yapýn
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
