@model List<digitalpayment3.Services.AccountInfo>

@{
    ViewBag.PageTitle = "Hesap Özeti";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold">
            <i class="bi bi-graph-up"></i> Hesap Özeti
        </h2>
        <p class="text-muted">Tüm hesaplarýnýzýn özeti</p>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-wallet2" style="font-size: 2.5rem;"></i>
                    <h3 class="mt-2">@Model.Count</h3>
                    <p class="mb-0">Toplam Hesap</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle" style="font-size: 2.5rem;"></i>
                    <h3 class="mt-2">@Model.Count(a => a.IsActive)</h3>
                    <p class="mb-0">Aktif Hesap</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <i class="bi bi-currency-exchange" style="font-size: 2.5rem;"></i>
                    <h3 class="mt-2">@Model.GroupBy(a => a.Currency).Count()</h3>
                    <p class="mb-0">Para Birimi</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Hesap Listesi</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Hesap ID</th>
                            <th>Para Birimi</th>
                            <th>Bakiye</th>
                            <th>Durum</th>
                            <th>Oluþturma</th>
                            <th>Ýþlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model)
                        {
                            <tr>
                                <td><strong>#@account.Id</strong></td>
                                <td><span class="badge bg-secondary">@account.Currency</span></td>
                                <td><strong class="text-primary">@account.Balance</strong></td>
                                <td>
                                    @if (account.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>@account.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Deposit" asp-route-accountId="@account.Id" 
                                           class="btn btn-success" title="Para Yatýr">
                                            <i class="bi bi-plus-circle"></i>
                                        </a>
                                        <a asp-action="Withdraw" asp-route-accountId="@account.Id" 
                                           class="btn btn-danger" title="Para Çek">
                                            <i class="bi bi-dash-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Henüz hesabýnýz bulunmuyor.
    </div>
}

<div class="card mt-4 border-info">
    <div class="card-body">
        <h6 class="text-info"><i class="bi bi-cloud-arrow-up"></i> Node.js API</h6>
        <p class="small mb-0">
            Tüm hesap ve iþlem bilgileri Node.js REST API üzerinden çekilmektedir.
        </p>
    </div>
</div>
