@{
    ViewBag.PageTitle = "API Para Çek";
    var account = ViewBag.Account as digitalpayment3.Services.AccountInfo;
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <h2 class="fw-bold mb-4 text-danger">
            <i class="bi bi-dash-circle"></i> API Para Çek
        </h2>

        @if (account != null)
        {
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Hesap Bilgileri</h6>
                    <p class="mb-1"><strong>Hesap ID:</strong> #@account.Id</p>
                    <p class="mb-1"><strong>Para Birimi:</strong> @account.Currency</p>
                    <p class="mb-0"><strong>Mevcut Bakiye:</strong> <span class="text-primary fs-5">@account.Balance</span></p>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="ApiWithdraw" method="post">
                        <input type="hidden" name="accountId" value="@account.Id" />

                        <div class="mb-3">
                            <label class="form-label">Çekilecek Tutar</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-currency-exchange"></i></span>
                                <input name="amount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span class="input-group-text">@account.Currency</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Açýklama</label>
                            <textarea name="description" class="form-control" rows="3" placeholder="Ýþlem açýklamasý..."></textarea>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> 
                            Para çekme iþlemi Node.js API üzerinden gerçekleþtirilecektir. Bakiyenizi kontrol ediniz.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle"></i> Para Çek
                            </button>
                            <a asp-action="ApiAccounts" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Geri
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
