@{
    ViewBag.PageTitle = "API Hesap Oluþtur";
}

<div class="row">
    <div class="col-lg-5 mx-auto">
        <h2 class="fw-bold mb-4">
            <i class="bi bi-plus-circle"></i> API Hesap Oluþtur
        </h2>

        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="ApiCreateAccount" method="post">
                    <div class="mb-3">
                        <label class="form-label">Para Birimi</label>
                        <select name="currency" class="form-select form-select-lg" required>
                            <option value="">Para birimi seçin...</option>
                            <option value="TRY">TRY - Türk Lirasý</option>
                            <option value="USD">USD - Amerikan Dolarý</option>
                            <option value="EUR">EUR - Euro</option>
                            <option value="GBP">GBP - Ýngiliz Sterlini</option>
                        </select>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        Hesap Node.js API üzerinden oluþturulacak ve baþlangýç bakiyesi 0.00 olacaktýr.
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Hesabý Oluþtur
                        </button>
                        <a asp-action="ApiAccounts" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Geri
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
