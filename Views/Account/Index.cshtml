@model List<digitalpayment3.Models.AccountViewModel>

@{
    ViewBag.PageTitle = "Hesaplarým";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold">
            <i class="bi bi-wallet2"></i> Hesaplarým
        </h2>
        <p class="text-muted">PostgreSQL veritabanýndan yönetilen hesaplarýnýz</p>
    </div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Hesap
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var account in Model)
        {
            <div class="col-md-6 col-lg-4">
                @* PartialView Kullanýmý *@
                <partial name="_AccountSummary" model="account" />
            </div>
        }
    </div>

    <div class="alert alert-success mt-4">
        <i class="bi bi-check-circle"></i> 
        <strong>@Model.Count hesap bulundu.</strong>
    </div>

    @* ViewComponent Kullanýmý *@
    <div class="row mt-4">
        <div class="col-lg-8 mx-auto">
            @await Component.InvokeAsync("RecentTransactions", new { count = 5 })
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle"></i> Henüz hesabýnýz yok</h5>
        <p class="mb-0">Yeni bir hesap oluþturarak baþlayabilirsiniz.</p>
    </div>
}

<div class="card mt-4 border-success">
    <div class="card-body">
        <h6 class="text-success"><i class="bi bi-database"></i> PostgreSQL Veritabaný</h6>
        <p class="small mb-0">
            Tüm hesap iþlemleri PostgreSQL veritabaný üzerinden yönetilmektedir.
            <strong>PartialView</strong> ve <strong>ViewComponent</strong> kullanýlmaktadýr.
        </p>
    </div>
</div>
