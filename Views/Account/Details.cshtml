@model digitalpayment3.Models.AccountViewModel

@{
    ViewBag.PageTitle = "Hesap Detayý";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h2 class="fw-bold mb-4">
            <i class="bi bi-info-circle"></i> Hesap Detayý
        </h2>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Hesap #@Model.Id</h5>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <h1 class="display-4 text-primary mb-0">@Model.Balance.ToString("N2")</h1>
                    <p class="text-muted">@Model.Currency</p>
                </div>
                <hr />
                <dl class="row mb-0">
                    <dt class="col-sm-4">Hesap ID:</dt>
                    <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

                    <dt class="col-sm-4">Hesap Sahibi:</dt>
                    <dd class="col-sm-8">@Model.OwnerName</dd>

                    <dt class="col-sm-4">Para Birimi:</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Currency</span></dd>

                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Oluþturulma Tarihi:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>

        @* DÖVÝZ KURLARI KARTI *@
        @if (ViewBag.ExchangeRates != null)
        {
            var rates = (digitalpayment3.Services.ExchangeRates)ViewBag.ExchangeRates;
            
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-currency-exchange"></i> Döviz Kurlarý
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        <strong>@rates.Amount @rates.Base</strong> = diðer para birimleri
                        <br />
                        <small>Tarih: @rates.Date</small>
                    </p>
                    
                    <div class="row g-3">
                        @foreach (var rate in rates.Rates.OrderBy(r => r.Key))
                        {
                            <div class="col-md-6 col-lg-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center p-3">
                                        <h6 class="text-muted mb-1">@rate.Key</h6>
                                        <h4 class="text-primary mb-0">@rate.Value.ToString("N4")</h4>
                                        <small class="text-muted">
                                            @Model.Balance.ToString("N2") @Model.Currency = 
                                            @((Model.Balance * rate.Value).ToString("N2")) @rate.Key
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="alert alert-info mt-3 mb-0">
                        <i class="bi bi-info-circle"></i>
                        <small>
                            Kurlar Node.js API üzerinden gerçek zamanlý çekilmektedir.
                            (<code>GET /api/rates?base=@Model.Currency</code>)
                        </small>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning mb-4">
                <i class="bi bi-exclamation-triangle"></i>
                Döviz kurlarý yüklenemedi. Node.js API çalýþmýyor olabilir.
            </div>
        }

        <div class="d-flex gap-2 mb-4">
            <a asp-controller="Transaction" asp-action="Deposit" asp-route-accountId="@Model.Id" 
               class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Para Yatýr
            </a>
            <a asp-controller="Transaction" asp-action="Withdraw" asp-route-accountId="@Model.Id" 
               class="btn btn-danger">
                <i class="bi bi-dash-circle"></i> Para Çek
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri
            </a>
        </div>
    </div>
</div>
