@model digitalpayment3.Models.AccountViewModel

@{
    ViewBag.PageTitle = "Hesap Düzenle";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <h2 class="fw-bold mb-4">
            <i class="bi bi-pencil-square"></i> Hesap Düzenle
        </h2>

        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="Balance" />

                    <div class="mb-3">
                        <label asp-for="OwnerName" class="form-label">Hesap Sahibi</label>
                        <input asp-for="OwnerName" class="form-control" readonly />
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                        <small class="text-muted">Hesap sahibi deðiþtirilemez</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Currency" class="form-label">Para Birimi</label>
                        <select asp-for="Currency" class="form-select">
                            <option value="TRY">TRY - Türk Lirasý</option>
                            <option value="USD">USD - Amerikan Dolarý</option>
                            <option value="EUR">EUR - Euro</option>
                            <option value="GBP">GBP - Ýngiliz Sterlini</option>
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mevcut Bakiye</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-exchange"></i></span>
                            <input type="text" class="form-control" value="@Model.Balance.ToString("N2")" readonly />
                            <span class="input-group-text">@Model.Currency</span>
                        </div>
                        <small class="text-muted">Bakiye sadece Para Yatýr/Çek iþlemleriyle deðiþir</small>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Hesap Aktif Mi?
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Bilgi:</strong> Sadece para birimi ve hesap durumu deðiþtirilebilir.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Ýptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
