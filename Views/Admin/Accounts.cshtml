@model List<digitalpayment3.Models.AccountViewModel>

@{
    ViewBag.PageTitle = "Hesap Yönetimi";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold">
            <i class="bi bi-wallet2"></i> Hesap Yönetimi
        </h2>
        <p class="text-muted">Sistemdeki tüm hesaplar</p>
    </div>
    <div class="col text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-list"></i> Hesap Listesi (@Model.Count)</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Hesap ID</th>
                        <th>Hesap Sahibi</th>
                        <th>Para Birimi</th>
                        <th>Bakiye</th>
                        <th>Durum</th>
                        <th>Oluþturma</th>
                        <th>Ýþlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td><strong>#@account.Id</strong></td>
                            <td>
                                <i class="bi bi-person"></i> @account.OwnerName
                            </td>
                            <td>
                                <span class="badge bg-secondary">@account.Currency</span>
                            </td>
                            <td>
                                <strong class="text-primary">@account.Balance.ToString("N2")</strong>
                            </td>
                            <td>
                                @if (account.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>@account.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a asp-controller="Account" asp-action="Details" asp-route-id="@account.Id" 
                                   class="btn btn-sm btn-info" title="Detaylar">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h4>@Model.Where(a => a.Currency == "TRY").Sum(a => a.Balance).ToString("N2")</h4>
                <p class="mb-0">Toplam TRY</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h4>@Model.Where(a => a.Currency == "USD").Sum(a => a.Balance).ToString("N2")</h4>
                <p class="mb-0">Toplam USD</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4>@Model.Where(a => a.Currency == "EUR").Sum(a => a.Balance).ToString("N2")</h4>
                <p class="mb-0">Toplam EUR</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h4>@Model.Where(a => a.Currency == "GBP").Sum(a => a.Balance).ToString("N2")</h4>
                <p class="mb-0">Toplam GBP</p>
            </div>
        </div>
    </div>
</div>
